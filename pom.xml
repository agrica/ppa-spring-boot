        <profile>
            <id>socle</id>
            <properties>
                <dist.snapshots.url>http://nexus/repository/maven-socle-releases/</dist.snapshots.url>
                <dist.releases.url>http://nexus/repository/maven-socle-releases/</dist.releases.url>
            </properties>
        </profile>

        <profile>
            <id>release-notes-git</id>
            <activation>
                <file>
                    <exists>.git</exists>
                </file>
            </activation>
            <build>
                <plugins>
                    <!-- ************************* -->
                    <!-- Changelog                -->
                    <!-- ************************ -->
                    <!-- Run:  mvn generate-sources     -->
                    <!-- https://github.com/tomasbjerre/git-changelog-maven-plugin/tree/master/git-changelog-maven-plugin-example -->
                    <plugin>
                        <groupId>se.bjurr.gitchangelog</groupId>
                        <artifactId>git-changelog-maven-plugin</artifactId>
                        <version>${git-changelog-maven-plugin.version}</version>
                        <executions>
                            <execution>
                                <id>GenerateGitChangelog</id>
                                <phase>generate-sources</phase>
                                <goals>
                                    <goal>git-changelog</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- Assembly htdocs-->

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <dependencies>
                            <dependency>
                                <groupId>com.agrica.socle.ppa</groupId>
                                <artifactId>ppa-assembly-descriptor</artifactId>
                                <version>${ppa-assembly-descriptor.version}</version>
                            </dependency>
                        </dependencies>
                        <configuration>
                            <appendAssemblyId>true</appendAssemblyId>
                            <tarLongFileMode>gnu</tarLongFileMode>
                        </configuration>
                        <executions>
                            <!-- Release Notes -->
                            <execution>
                                <id>make-assembly-release-notes</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <configuration>
                                    <descriptorRefs>
                                        <descriptorRef>assembly-release-notes</descriptorRef>
                                    </descriptorRefs>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                </plugins>
            </build>
        </profile>

        <profile>
            <id>todir</id>
            <properties>
                <packaging.assembly.app.format>dir</packaging.assembly.app.format>
            </properties>
        </profile>

    </profiles>
